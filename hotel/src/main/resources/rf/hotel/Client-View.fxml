<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="rf.hotel.Client.ClientManagerController"
      alignment="CENTER"
      spacing="10">
    <HBox alignment="CENTER" spacing="10">
        <TableView fx:id="employeeTableView" editable="true" layoutX="14.0" prefHeight="550.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID">
                </TableColumn>
                <TableColumn fx:id="nameColumn" prefWidth="112.0" text="Name">
                </TableColumn>
                <TableColumn fx:id="numColumn" prefWidth="172.0" text="Phone Number">
                </TableColumn>
                <TableColumn fx:id="rankColumn" prefWidth="102.0" text="Rank">
                </TableColumn>
                <TableColumn fx:id="salaryColumn" prefWidth="133.0" text="Salary">
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Employee Manager" style="-fx-font-weight: bold; -fx-alignment: center; -fx-font-size: 30px;" BorderPane.alignment="CENTER"/>
            <Button text="Add Employees" onAction="#addEmployees" prefWidth="150" prefHeight="30"/>
            <Button text="Update Employees" onAction="#updateEmployees" prefWidth="150" prefHeight="30"/>
            <Button text="Delete Employees" onAction="#deleteEmployees" prefWidth="150" prefHeight="30"/>
            <Button text="Exit" onAction="#quit"/>
        </VBox>
    </HBox>
</VBox>